{
    "compilerOptions": {
        "types": [
            "mocha",
            "chai",
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": false,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./target/types/*"
            ]
        }
    },
    "include": [
        "tests/**/*",
        "target/types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}