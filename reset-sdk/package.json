{
  "name": "@reset/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Reset Program Solana contract",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "mocha tests/**/*.test.ts --require ts-node/register --timeout 30000",
    "test:unit": "mocha tests/unit/**/*.test.ts --require ts-node/register --timeout 10000",
    "test:integration": "mocha tests/integration/**/*.test.ts --require ts-node/register --timeout 60000",
    "test:watch": "mocha tests/**/*.test.ts --require ts-node/register --watch --watch-files tests/**/*.ts"
  },
  "keywords": [
    "solana",
    "typescript",
    "sdk",
    "blockchain",
    "reset-program",
    "auction"
  ],
  "author": "Reset Team",
  "license": "MIT",
  "peerDependencies": {
    "@solana/web3.js": "^1.91.6",
    "@coral-xyz/anchor": "^0.30.1"
  },
  "dependencies": {
    "bn.js": "^5.2.1"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/mocha": "^10.0.6",
    "@types/chai": "^4.3.14",
    "@types/node": "^20.17.52",
    "mocha": "^10.3.0",
    "chai": "^4.4.1",
    "ts-node": "^10.9.2",
    "@solana/spl-token": "^0.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reset/sdk"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
} 