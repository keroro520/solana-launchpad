{
  "name": "reset-program-tests",
  "version": "0.1.0",
  "description": "TypeScript tests for Reset Program",
  "scripts": {
    "test": "ts-node tests/run-all-tests.ts",
    "test:unit": "ts-mocha -p ./tsconfig.json tests/unit/*.test.ts",
    "test:integration": "ts-mocha -p ./tsconfig.json tests/integration/*.test.ts",
    "test:performance": "ts-mocha -p ./tsconfig.json tests/unit/performance.test.ts",
    "test:security": "ts-mocha -p ./tsconfig.json tests/unit/security.test.ts",
    "test:allocation": "ts-mocha -p ./tsconfig.json tests/unit/allocation.test.ts",
    "test:errors": "ts-mocha -p ./tsconfig.json tests/unit/error-handling.test.ts",
    "test:edge-cases": "ts-mocha -p ./tsconfig.json tests/integration/edge-cases.test.ts",
    "test:watch": "ts-mocha -p ./tsconfig.json --watch tests/**/*.test.ts",
    "test:coverage": "nyc ts-mocha -p ./tsconfig.json tests/**/*.test.ts",
    "build": "tsc",
    "lint": "eslint tests/**/*.ts",
    "format": "prettier --write tests/**/*.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.0.0",
    "chai": "^4.3.6",
    "mocha": "^9.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.0",
    "prettier": "^2.7.1",
    "eslint": "^8.20.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "nyc": "^15.1.0"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.95.0",
    "@solana/spl-token": "^0.4.8",
    "bn.js": "^5.2.1"
  }
} 